/* pages/department/department.wxss */
.container {
	padding: 0;
    background-color: #fff;
}
.teacher-container {
	width: 100%;
}
.teacher-container .section {
	padding: 20rpx 28rpx;
	box-sizing: border-box;
	border-bottom: 2rpx solid #ddd;
}
.teacher-count {
	padding: 5rpx;
	width: 100%;
  height: 72rpx;
	font-size: 36rpx;
  line-height: 72rpx;
  border: 3rpx solid black;
  border-radius: 12rpx;
	box-sizing: border-box;
  text-align: center;
}
.scroll-view-item {
	position: relative;
	margin-left: 28rpx;
	border-bottom: 2rpx solid black;
}


.scroll-view-item .teacher-name {
	font-size: 34rpx;
	color: #333;
	background: #f4f4f8;
}

.scroll-view-item .teacher-count {
	color:black;
	margin-top: 12rpx;
	margin-right: 30rpx;
	font-size: 28rpx;
}

.scroll-view-item .arrow {
	position: absolute;
	top: 50rpx;
	right: 20rpx;
	width: 36rpx;
	height: 36rpx;
}